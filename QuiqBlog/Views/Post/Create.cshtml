@model QuiqBlog.ViewModels.PostCreateViewModel


<div class="container-fluid">
    <h1 class="mt-4">Create</h1>
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-pen"></i>
                    Write a Post
                </div>
                <div class="card-body">
                    <form id="createBlogForm" asp-controller="Post" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control" required/>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Body"></label>
                            <textarea asp-for="Body" class="form-control textarea" rows="8" required></textarea>
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <p class="text-muted">Publish now or save for later edits.</p>
                        <label>Publish now?</label>
                        <input type="checkbox" checked data-toggle="toggle" />
                        <br />
                        <button class="btn btn-primary" type="submit" form="CreateBlogForm">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.ckeditor5/21.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('textarea'))
            .catch(error => {
                console.error(error);
            });
    </script>
}
